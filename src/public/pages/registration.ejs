<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        clifford: '#da373d',
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-100">
    <!-- Navbar -->
    <nav class="bg-gray-800 fixed top-0 left-0 w-full z-10">
        <div class="container mx-auto px-4 py-2 flex justify-between items-center">
            <h1 class="text-xl font-semibold text-white"><a href="/">SynthCloud</a></h1>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mx-auto px-4 py-20 flex justify-center items-center h-screen">
        <div class="auth-bg rounded-lg p-8">
            <h2 class="text-2xl font-semibold mb-4 text-center">Register</h2>
            <form class="space-y-4" method="post" action="/register">
                <div>
                    <label for="email" class="block text-gray-600">Email</label>
                    <input type="email" id="email" name="email" class="w-full border rounded-md px-3 py-2">
                </div>
                <div>
                    <label for="name" class="block text-gray-600">Username</label>
                    <input type="text" id="name" name="name" class="w-full border rounded-md px-3 py-2">
                </div>
                <div>
                    <label for="password" class="block text-gray-600">Password</label>
                    <input type="password" id="password" name="password" class="w-full border rounded-md px-3 py-2">
                </div>

                <p class="mt-2 text-secondary ">Have an account? <a class="" href="/auth" style="text-decoration-line: none;">Log in</a></p>

                <button type="submit" class="bg-gray-800 text-white rounded-md py-2 px-4 w-full mx-auto">Register</button>
            </form>
        </div>
    </div>

    <!-- Google Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</body>
</html>
