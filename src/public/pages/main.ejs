<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SynthCloud</title>

    <link rel="stylesheet" href="../styles/main.css">

    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        clifford: '#da373d',
                    }
                }
            }
        }
    </script>

</head>
<body class="bg-gray-100">
    <!-- Navbar -->
    <nav class="bg-gray-800 shadow">
        <div class="container mx-auto px-4 py-2 flex justify-between items-center">
            <h1 class="text-xl font-semibold text-white"><a href="/">SynthCloud</a></h1>
            <ul class="flex space-x-4 items-center">
                <li><a href="/" class="text-white hover:text-gray-300">Explore</a></li>
                <!-- Avatar Redirecting to Profile Page -->
                <li>
                    <a href="/profile">
                        <img src="https://t4.ftcdn.net/jpg/05/49/98/39/360_F_549983970_bRCkYfk0P6PP5fKbMhZMIb07mCJ6esXL.jpg" alt="Avatar" class="w-8 h-8 rounded-full">
                    </a>
                </li>
                <!-- Gear Icon for Settings -->
                <li>
                    <a href="#" class="text-white hover:text-gray-300">
                        <i class="material-icons">settings</i>
                    </a>
                </li>
            </ul>
        </div>
    </nav>


    <!-- Main Content -->
    <div class="container mx-auto px-4 py-8">
        <h2 class="text-2xl font-semibold mb-4">Musics</h2>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <div class="bg-white rounded-lg shadow-md overflow-hidden flex items-center">
                <img src="https://img.discogs.com/HFarwBGgvJjFRlNkVrxlhTUBDJk=/fit-in/600x586/filters:strip_icc():format(jpeg):mode_rgb():quality(90)/discogs-images/R-14473487-1575426848-4987.jpeg.jpg" alt="Music Cover" class="w-1/3">

                <div class="p-4 flex-grow">
                    <h3 class="text-lg font-semibold">Madeon - Dream Dream Dream</h3>
                    <p class="text-gray-600">Talented EDM artisit from Nantes</p>
                </div>
            </div>
        </div>
    </div>

    <audio id="audio" controls>
        Your browser does not support the audio element.
    </audio>


    <!-- Music Player -->
    <div class="bg-gray-800 py-4 fixed bottom-0 w-full">
        <div class="container mx-auto px-4 flex items-center justify-between">
            <div class="flex items-center space-x-4">
                <button class="text-white"><i class="material-icons">skip_previous</i></button>
                <button class="text-white"><i class="material-icons">play_arrow</i></button>
                <button class="text-white"><i class="material-icons">skip_next</i></button>
            </div>
            <div class="w-2/3">
                <div class="bg-gray-600 h-2 rounded-full"></div>
            </div>
        </div>
    </div>

    <!-- Google Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <!--Firebase Storage Scripts-->
    <script src="../scripts/client.js"></script>
</body>
</html>
