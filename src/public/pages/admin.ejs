<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - SynthCloud</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        clifford: '#da373d',
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-100">
    <!-- Navbar -->
    <nav class="bg-gray-800 shadow">
        <div class="container mx-auto px-4 py-2 flex justify-between items-center">
            <h1 class="text-xl font-semibold text-white"><a href="/">Admin Dashboard</a></h1>
            <ul class="flex space-x-4 items-center">
                <li><a href="/" class="text-white hover:text-gray-300 me-5">Explore</a></li>
                <li><a href="/lyrics" class="text-white hover:text-gray-300 me-5">Lyrics</a></li>
                <li><a href="/upload" class="text-white hover:text-gray-300 me-5">Upload</a></li>
                <!-- Avatar Redirecting to Profile Page -->
                <li>
                    <a href="/profile">
                        <img src="https://t4.ftcdn.net/jpg/05/49/98/39/360_F_549983970_bRCkYfk0P6PP5fKbMhZMIb07mCJ6esXL.jpg" alt="Avatar" class="w-8 h-8 rounded-full">
                    </a>
                </li>
                <!-- Gear Icon for Settings -->
                <li>
                    <a href="#" class="text-white hover:text-gray-300 ms-5">
                        <i class="material-icons pt-1">settings</i>
                    </a>
                </li>
            </ul>
        </div>
    </nav>


    <!-- Main Content -->
    <div class="container mx-auto px-4 py-8">
        <h2 class="text-2xl font-semibold mb-4">Profile</h2>

        <!-- User Management Section -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden p-6">
            <h3 class="text-xl font-semibold mb-4">User Management</h3>
            <!-- User Table -->
            <div class="-mx-4">
                <table class="min-w-full">
                    <thead>
                        <tr class="bg-gray-200">
                            <th class="px-4 py-2">ID</th>
                            <th class="px-4 py-2">Username</th>
                            <th class="px-4 py-2">Created At</th>
                            <th class="px-4 py-2">Updated At</th>
                            <th class="px-4 py-2">Admin</th>
                            <th class="px-4 py-2">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user => { %>
                            <tr>
                                <td class="px-4 py-2"><%= user.id %></td>
                                <td class="px-4 py-2"><%= user.username %></td>
                                <td class="px-4 py-2"><%= user.createdAt %></td>
                                <td class="px-4 py-2"><%= user.updatedAt %></td>
                                <td class="px-4 py-2"><%= user.isAdmin ? 'Yes' : 'No' %></td>
                                <td class="px-4 py-2">
                                    <button class="text-white bg-blue-500 px-2 py-1 rounded">Edit</button>
                                    <button class="text-white bg-red-500 px-2 py-1 rounded">Delete</button>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>


    <!-- Google Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</body>
</html>
