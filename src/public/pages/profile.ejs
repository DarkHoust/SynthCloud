<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile - SynthCloud</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        clifford: '#da373d',
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-100">
    <!-- Navbar -->
    <nav class="bg-gray-800 shadow">
        <div class="container mx-auto px-4 py-2 flex justify-between items-center">
            <h1 class="text-xl font-semibold text-white"><a href="/">SynthCloud</a></h1>
            <ul class="flex space-x-4 items-center">
                <li><a href="/" class="text-white hover:text-gray-300">Explore</a></li>
                <!-- Avatar Redirecting to Profile Page -->
                <li>
                    <a href="profile.html">
                        <img src="avatar.jpg" alt="Avatar" class="w-8 h-8 rounded-full">
                    </a>
                </li>
                <!-- Gear Icon for Settings -->
                <li>
                    <a href="#" class="text-white hover:text-gray-300">
                        <i class="material-icons">settings</i>
                    </a>
                </li>
            </ul>
        </div>
    </nav>


    <!-- Main Content -->
    <div class="container mx-auto px-4 py-8">
        <h2 class="text-2xl font-semibold mb-4">Profile</h2>

        <!-- Profile Information -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden p-6 mb-8 flex justify-between items-center">
            <div class="flex items-center">
                <img src="profile_picture.jpg" alt="Profile Picture" class="w-16 h-16 rounded-full">
                <div class="ml-4">
                    <h3 class="text-lg font-semibold mb-1"><%= userInfo.username %></h3>
                    <p class="text-gray-600 mb-1"><%= userInfo.mail %></p>
                </div>
            </div>
            <!-- Logout Button -->
            <button name="logoutBtn" class="text-gray-600 hover:text-gray-900" onclick="window.location.href = '/logout'; " >
                <i class="material-icons">logout</i>
            </button>
        </div>


    </div>

    <!-- Music Player -->
    <div class="bg-gray-800 py-4 fixed bottom-0 w-full">
        <div class="container mx-auto px-4 flex items-center justify-between">
            <div class="flex items-center space-x-4">
                <button class="text-white"><i class="material-icons">skip_previous</i></button>
                <button class="text-white"><i class="material-icons">play_arrow</i></button>
                <button class="text-white"><i class="material-icons">skip_next</i></button>
            </div>
            <div class="w-2/3">
                <div class="bg-gray-600 h-2 rounded-full"></div>
            </div>
        </div>
    </div>

    <!-- Google Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</body>
</html>
